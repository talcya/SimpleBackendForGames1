{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  "types": ["node", "express", "passport"],
    "outDir": "dist",
    "noEmitOnError": true
  },
  "include": ["src/**/*"]
}
